<%- include('partials/header') %>
<div class="wypelnienie">

</div>
  <div class="jumbotron jumbotron-fluid custom-jumbotron">
    <div class="container">
      <h1><%= naglowek %> <%= tytul %></h1>
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /login route -->
          <form action="/edit-post" method="POST">
            <div class="form-group">
              <label for="id">ID</label>
              <input type="text" class="form-control" name ="id" value="<%= id %>" readonly>
            </div>
            <div class="form-group">
              <label for="title">Tytuł artykułu</label>
              <input type="text" class="form-control" name ="title" value="<%= tytul %>">
            </div>
            <div class="form-group">
              <label for="data">Data</label>
              <input type="text" class="form-control" name ="date" value="<%= data %>">
            </div>
            <div class="form-group">
              <label for="lead">Lead artykułu</label>
              <textarea rows="8" class="form-control" name ="lead">
                <%= lead %>
                </textarea>
            </div>
            <div class="form-group">
              <label for="content">Treść artykułu</label>
              <textarea rows="12" class="form-control" name ="content">
                <%= tresc %>
                </textarea>
            </div>
            <div class="form-group">
              <label for="link">Link do artykułu</label>
              <input type="text" class="form-control" name="link" value="<%= link %>">
            </div>
            <div class="form-group">
              <label for="source">Źródło artykułu</label>
              <input type="text" class="form-control" name ="source" value="<%= zrodlo %>">
            </div>

            <p>  Wybierz kategorię posta:</p>
              <div class="form-group">
              <label for="news">Aktualności: </label>
              <input type="radio" name="news" value="true" checked> <label for="true">TAK</label>
              <input type="radio" name="news" value="false"> <label for="false">NIE</label>
              </div>
              <div class="form-group">
              <label for="covid">COVID: </label>
              <input type="radio" name="covid" value="true" checked> <label for="true">TAK</label>
              <input type="radio" name="covid" value="false"> <label for="false">NIE</label>

            </div>
            <div class="form-group">
              <input type="password" class="form-control" name ="pass" placeholder="<%= placeholder %>">
            </div>
            <button type="button" class="btn custom-button" onclick="javascript:history.back()">Anuluj</button>
            <button type="submit" class="btn custom-button">Zapisz zmiany</button>
          </form>

        </div>
      </div>
    </div>

  </div>

<%- include('partials/footer') %>
